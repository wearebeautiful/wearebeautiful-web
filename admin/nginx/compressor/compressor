server { # this step only does compression

        listen 80;

        server_name myapp.local;
        include proxy_params;

        sendfile               on;
        sendfile_max_chunk     1m;

        location / {
                gzip on;
                gzip_disable "msie6";
                gzip_vary on;
                gzip_proxied any;
                gzip_comp_level 6;
                gzip_buffers 16 8k;
                gzip_http_version 1.1;
                gzip_min_length 256;
                gzip_types text/plain text/css application/json application/x-javascript text/javascript image/svg+xml image/x-icon model/stl application/sla;

                proxy_set_header Accept-Encoding identity;
                proxy_pass http://localhost:3031;

                uwsgi_pass unix:///tmp/uwsgi.sock;
                include uwsgi_params;
        }
}
